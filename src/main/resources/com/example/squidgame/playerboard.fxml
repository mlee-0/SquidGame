<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.geometry.Insets?>
<HBox alignment="CENTER"
          spacing="25.0"
          style="-fx-background-color: #000"
          xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="com.example.squidgame.PlayerboardController"
          prefHeight="400.0" prefWidth="600.0">
    <padding>
        <Insets bottom="25.0" left="25.0" right="25.0" top="25.0"/>
    </padding>

    <GridPane fx:id="board" hgap="5.0" vgap="5.0" style="-fx-font-size: 15"/>

    <VBox spacing="25.0" HBox.hgrow="ALWAYS">
        <GridPane hgap="10.0" vgap="5.0" style="-fx-font-size: 15">
            <Label
                    fx:id="labelNumber"
                    alignment="BASELINE_CENTER"
                    style="-fx-font-size: 30; -fx-font-weight: bold; -fx-text-fill: #fff"
                    GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"
            />
            <Label
                text="Name:"
                GridPane.halignment="LEFT"
                style="-fx-text-fill: #fff"
                GridPane.rowIndex="1" GridPane.columnIndex="0"
            />
            <Label
                    fx:id="labelName"
                    GridPane.halignment="RIGHT"
                    style="-fx-text-fill: #fff"
                    GridPane.rowIndex="1" GridPane.columnIndex="1"
            />
            <Label
                text="Age:"
                GridPane.halignment="LEFT"
                style="-fx-text-fill: #fff"
                GridPane.rowIndex="2" GridPane.columnIndex="0"
            />
            <Label
                    fx:id="labelAge"
                    GridPane.halignment="RIGHT"
                    style="-fx-text-fill: #fff"
                    GridPane.rowIndex="2" GridPane.columnIndex="1"
            />
            <Label
                text="Occupation:"
                GridPane.halignment="LEFT"
                style="-fx-text-fill: #fff"
                GridPane.rowIndex="3" GridPane.columnIndex="0"
            />
            <Label
                    fx:id="labelOccupation"
                    GridPane.halignment="RIGHT"
                    style="-fx-text-fill: #fff"
                    GridPane.rowIndex="3" GridPane.columnIndex="1"
            />
            <columnConstraints>
                <ColumnConstraints hgrow="NEVER" percentWidth="30"/>
                <ColumnConstraints hgrow="NEVER" percentWidth="70"/>
            </columnConstraints>
        </GridPane>

        <Button fx:id="buttonNext" text="Next Game" style="-fx-font-size: 30; -font-weight: bold"/>
    </VBox>
</HBox>
